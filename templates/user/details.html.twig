{% extends 'base.html.twig' %}

{% block title %}Users Details{% endblock %}

{% block body %}

<div class="flex flex-col">
    <img src={% if user.image %}"{{user.image.src}}"{% else %}"https://emedia1.nhs.wales/HEIW2/cache/file/F4C33EF0-69EE-4445-94018B01ADCF6FD4_medium.png"{% endif %} alt="">
    <div class="flex flex-col">
        <h3>{{user.username}}</h3>
        <p>{{user.firstname}} {{user.lastname}}</p>
        <p>{{user.email}}</p>
    </div>
</div>
{% endblock %}
